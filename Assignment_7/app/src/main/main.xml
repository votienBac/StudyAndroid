<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.droidcoffee"
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/Theme.DroidCoffee">

    <fragment
        android:id="@+id/listFragment"
        class="com.example.droidcoffee.MainFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@layout/activity_main.xml">

    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        class="com.example.droidcoffee.OrderFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@layout/activity_order.xml">

    </fragment>

</LinearLayout>